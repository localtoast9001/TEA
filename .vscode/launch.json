{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/TEAC/bin/Debug/net6.0/TEAC.dll",
            "args": [
                "/I../System/",
                "/I../System/ExtendedMath",
                "/I../System/Graphics",
                "/I../System/Graphics/IO",
                "/I../System/IO",
                "/I../System/Text",
                "/I./Lights",
                "/I./Shapes",
                "/I.",
                "/Faobj/x86/Debug/RayTracer.Program.asm",
                "/Foobj/x86/Debug/RayTracer.Program.o",
                "/home/localtoast/code/TEA/RT/RayTracer.Program.tea",
            ],
            "cwd": "${workspaceFolder}/RT",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/SAMPLES/Samples.FileStreamTest/bin/x86/Debug/Samples.FileStreamTest",
            "args": [
                "~/foo.txt",
                "Hello"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
        }
    ]
}