namespace SmokeTests;

type
    Program = static class
        public
            static function Main(
                argc : integer; 
                argv : array of array of character) : integer;
        private
            static function TestWhile() : boolean;
    end;

function Program.TestWhile() : boolean;
var
    test : boolean;
begin
    test := true;
    while test do
    begin
        test := false;
    end;
    TestWhile := test;
end;

function Program.Main(
    argc : integer;
    argv : array of array of character) : integer;
var
    a, b : integer;
    test : boolean;
begin
    TestWhile();
    a := 0;
    b := 0;
    test := true;
    if test then
        a := 1
    else
        a := 2;
    Main := a;
end;
